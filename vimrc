"netrw settings
let g:netrw_banner = 0
let g:netrw_liststyle = 3
let g:netrw_altv = 1
let g:netrw_winsize = 8

set number
set relativenumber

"Enable mouse in insert mode
set mouse=i

"Enable project specific vimrc,
set exrc
set secure

"Keeps cursor 4 lines from edge
set scrolloff=4

"Allows arrow keys to change line
set whichwrap+=<,>,h,l
